CXX = CC
LD = CC

CXXFLAGS = -O3 -hstd=c++11 -homp -hvector3 -hfp3 -hipa5 -hlist=a -hintrinsics -I$(CURDIR)/include
LDFLAGS = 

FUNC = SQRT_SQRT
SIMDWIDTH = 8

CXXFLAGS += -D__AVX512F__
CXXFLAGS += -DBENCHMARK_FUNC_$(FUNC)
CXXFLAGS += -DSIMD_WIDTH_LOGICAL_REAL64=$(SIMDWIDTH)
CXXFLAGS += -DDEBUG

BIN_DIR=$(CURDIR)/bin.cray

# export all variables for subsequent make calls
export

all : 
	make -C src -f makefile_global

clean :
	make -C src -f makefile_global clean
